# Copy this file to ".env" in the project root and fill in your values.
# PlatformIO will load these variables and inject them via build_flags.

# WiFi credentials used by receiver for OTA window
WIFI_SSID=YourWifiSSID
WIFI_PASSWORD=YourWifiPassword

# OTA settings for receiver
# Hostname without ".local" suffix (platformio.ini appends .local automatically)
OTA_HOSTNAME=wizard-receiver
# Set a strong password; required for OTA uploads/monitor
OTA_PASSWORD=wizard123
